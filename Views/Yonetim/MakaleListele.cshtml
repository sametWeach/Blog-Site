
@{
    ViewBag.Title = "MakaleListele";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}



@model IEnumerable<MvcBlog.Models.makale>

    
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Makaleler Tablosu</h3>

                    <div class="card-tools">
                        <div class="input-group input-group-sm" style="width: 150px;">
                            <input type="text" name="table_search" class="form-control float-right" placeholder="Ara">

                            <div class="input-group-append">
                                <button type="submit" class="btn btn-default"><i class="fas fa-search"></i></button>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.card-header -->
                <div class="card-body table-responsive p-0" style="height: 300px;">
                    <table class="table table-head-fixed text-nowrap">
                        <thead>
                            <tr>
                                <th>Başlık</th>
                                <th>Yazar</th>
                                <th>Kategori</th>
                                <th>Yayın Tarihi</th>
                                
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var m in Model)
                            {
                                <tr>
                                    <td>@m.Baslik</td>
                                    <td>@m.kullanici.Ad @m.kullanici.Soyad</td>
                                    <td>@m.kategori.Ad</td>                                   
                                    <td>@m.YayinTarihi</td>
                                </tr>
                            }



                        </tbody>
                    </table>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
    

